<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/items_card_store"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:elevation="15dp"
    app:cardCornerRadius="20px"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_store"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:importantForAutofill="auto"
            android:src="@drawable/ic_launcher_background"></ImageView>

        <TextView
            android:id="@+id/tv_name_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Lẩu Phan"
            android:textColor="#000000"
            android:textSize="24sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address_store"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:layout_weight="8"
                android:text="Tòa nhà 25T2, KĐT Trung Hòa Nhân Chính, Nguyễn Thị Thập, P. Trung Hòa, Q. Cầu Giấy, Tp. Hà Nội"
                android:textColor="#616161"
                android:textSize="16sp"></TextView>

            <TextView
                android:id="@+id/tv_star_store"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:text="4,6 sao"
                android:textColor="#FFEB3B"
                android:textSize="16sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>