<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="10dp"
    app:cardElevation="10dp"
    android:elevation="15dp"
    app:cardCornerRadius="20px"
    android:id="@+id/items_card_store">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:importantForAutofill="auto"
            android:id="@+id/img_store"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_gravity="center"
            >
        </ImageView>
        <TextView
            android:id="@+id/tv_NameStore"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lẩu Phan"
            android:textColor="#000000"
            android:textSize="24sp"
            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_weight="10">
            <TextView
                android:layout_weight="8"
                android:id="@+id/tv_AddressStore"
                android:layout_width="0dp"
                android:layout_height="23dp"
                android:text="Tòa nhà 25T2, KĐT Trung Hòa Nhân Chính, Nguyễn Thị Thập, P. Trung Hòa, Q. Cầu Giấy, Tp. Hà Nội"
                android:textColor="#616161"
                android:textSize="16sp"
                ></TextView>
            <TextView
                android:id="@+id/tv_StarStore"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4,6 sao"
                android:textColor="#FFEB3B"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="right"
                ></TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>